<!-- News - Dynamic Facebook Open Graph Tags -->
<% meta_tag :og_title, news_item.title %>
<% meta_tag :og_description, news_item.content %>

<% if news_item.has_image? %>
    <% meta_tag :og_image, news_item.image.url %>
    <% meta_tag :og_image_height, "#{news_item.image_height}" %>
    <% meta_tag :og_image_width, "#{news_item.image_width}" %>
<% end %>


<!-- News - Dynamic Twitter Card Tags -->
<% meta_tag :twitter_title, news_item.title %>
<% meta_tag :twitter_description, news_item.content %>

<% if news_item.has_image? %>
    <% meta_tag :twitter_image, news_item.image.url %>
<% end %>
