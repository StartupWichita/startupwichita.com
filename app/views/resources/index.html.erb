<% content_for :utility_bar do %>
    <div class="util-head">
        <div class="container">
            <%= link_to new_resource_path, :class => "btn" do %>
               <span class="glyphicon glyphicon-plus"></span> Add Resource 
            <% end %>
        </div>
    </div>
<% end %>
<section class="section">
    <div class="container">
        <% unless @resources.blank? %>
            <div class="row inline">
                <% @resources.each do |resource| %>
                    <div class="col-sm-6 col-md-4 inline-block">
                       <%= render partial: "shared/resource", locals: { resource: resource } %>
                    </div>
                <% end %>
            </div>
        <% else %>
            <p>
                No resources yet. Why don't you <%= link_to "add some", new_resource_path %>?
            </p>
        <% end %>
    </div>
</section>
