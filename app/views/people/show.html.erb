<%= title @person.full_name %>

<% content_for :utility_bar do %>
  <!-- <% if claimable(@person) %>
    <%= link_to 'Claim This Profile', people_claim_path(@person), class: "btn btn-sm btn-claim" %>
  <% end %> -->
  <% if owned_by_current_user(@person) || (!current_user.nil? && current_user.admin) %>
    <%= link_to 'Edit', edit_person_path(@person), class: "btn btn-edit" %>
  <%  end %>
<% end %>

<section class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= render partial: "shared/profile", locals: { person: @person, featured: false } %>

        <% if @person.phone.present? && @person.allow_contact %>
              <h3>Phone Number</h3>
              <%= @person.phone %>
        <% end %>

        <% if @person.email.present? && @person.allow_contact %>
          <%= render partial: "person_email_form" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
