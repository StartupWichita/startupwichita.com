<div class="row topic-row" >
    <h2 class="robotoSlab text-center">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal col-md-offset-3 col-md-6" }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
            <%= f.label :email, :class => "col-md-2 control-label" %>
            <div class="col-md-10">

                <%= f.email_field :email, autofocus: true, :class => "form-control" %>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 col-md-offset-2">
                <%= f.submit "Send me reset password instructions", :class => "btn btn-primary" %>
            </div>
        </div>
    <% end %>
    <br>

    <%= render "devise/shared/links" %>
  </div>
</div>
