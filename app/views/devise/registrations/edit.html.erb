<div class="row topic-form">
    <h1 class="robotoSlab text-center">Edit Your Profile</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal col-md-offset-3 col-md-6" }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
            <%= f.label :email, :class => "col-md-4 control-label" %>
            <div class="col-md-8">
                <%= f.email_field :email, autofocus: true, :class => "form-control" %>
            </div>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

        <div class="form-group">
            <%= f.label :password, class: "col-md-4 control-label" do %>
            Password <i class="glyphicon glyphicon-question-sign" data-toggle="tooltip" data-placement="top" title="Leave blank if you don't want to change it"></i>
            <% end %>
            <div class="col-md-8">
                <%= f.password_field :password, autocomplete: 'off', class: "form-control" %>
            </div>
        </div>

        <% f.object.build_person unless f.object.person.present? %>
        <%= f.fields_for :person do |ff| %>

          <%= render partial: "shared/person_edit_form", locals: { f: ff } %>
        
        <% end %>

        <div class="form-group">
            <div class="col-md-6 col-md-offset-4">
                <%= f.submit "Update", :class => "btn btn-primary" %>
            </div>
        </div>
    <% end %>
</div>

<div class="row">
    <h3 class="robotoSlab text-center">Unhappy?</h3>
    <p class="col-md-12 text-center">
        If you are unhappy with your account and would like to remove it
        permanently from this site, you can do so by clicking the button below.
    </p>
    <div class="form-group row">
        <div class="col-md-6 col-md-offset-4">
            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure you want to cancel your account?" }, method: :delete, class: "btn btn-danger" %>
        </div>
    </div>
</div>
